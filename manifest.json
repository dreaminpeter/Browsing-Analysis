{
  "name": "Digital Footprint",
  "version": "2.0",
  "description": "It records URL's and submit them onto the server.",
  "permissions": ["storage", "http://*/", "https://*/", "downloads", "idle"],
  "background": {
    "scripts": ["js/utils.js", "js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon.png"
    },
    "default_title": "Your Footprint",
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
